    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with LLDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/hybridsort", // Path to your compiled binary
            "args": [], // Add program arguments if needed
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}", // Set working directory
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb", // Specify LLDB
            "setupCommands": [
              {
                "description": "Enable pretty-printing for STL containers",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ]
          }
    ]
}